<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Work Out Match</title>

    <!--Styles-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <link href="~/Content/styles.css" rel="stylesheet" />

    <!--Scripts-->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header class='menu-main'>
        <div class='brand-container'>
            <a href="@Url.Action("Index", "Home")">
                <span class='brand-initials'>FitMatch</span>
                <span class='brand-name'></span>
            </a>
        </div>
        <ul class="nav nav-justified">
            <li class="nav-item expand-nav">
                <a class="nav-link" href="@Url.Action("Index", "Trainer")">Home</a>
            </li>
            <li class="nav-item expand-nav">
                <a class="nav-link" href="@Url.Action("AddExercise", "Trainer")">Add to your Exercise Bank</a>
            </li>
            <li class="nav-item expand-nav">
                <a class="nav-link" href="@Url.Action("ClientServices", "Trainer")">Edit Workout Plans</a>
            </li>
            <li class="nav-item expand-nav">
                <a class="nav-link" href="@Url.Action("Logout", "User")">Logout</a>
            </li>
        </ul>
    </header>
    <div class="page-wrap">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <footer class="footer site-footer">
        <div class="copyright"> Copyright @DateTime.Now.Year WOM LLC.</div>
    </footer>
</body>
</html>
